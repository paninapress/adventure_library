
<%= form_for @adventure do |f| %>
  
  <%= f.label :author %> <br>
  <%= f.text_field :author %>
  <br>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>

<br>
  <%= f.fields_for :pages, @adventure.pages.build do |p| %>
    <%= p.label :name %> <br>
    <%= p.text_field :name %>
    <br>
    <%= p.label :text %> <br>
    <%= p.text_area :text %>
  <% end %> 
  
<br>

  <%= f.submit %>
<% end %>